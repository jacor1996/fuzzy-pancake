@model IEnumerable<DAL.DataModel.Activity>

<div class="jumbotron">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaloriesBurnedPerHour)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CaloriesBurnedPerHour)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ActivityId })
                </td>
            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

</div>