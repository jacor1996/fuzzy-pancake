@using DAL.DataModel
@model WebApplication.Models.UserMealsViewModel

@{
    ViewBag.Title = "Index2";
}

<h2>Index2</h2>

<div>
    <p>Kcal: @Model.CaloryHelper.Calories / @Model.CaloryHelper.CaloriesLimit</p>
    <p>Protein: @Model.CaloryHelper.Proteins Kcal: @Model.CaloryHelper.CaloriesFromProteins</p>
    <p>Carbohydrates: @Model.CaloryHelper.Carbohydrates Kcal: @Model.CaloryHelper.CaloriesFromCarbs</p>
    <p>Fats: @Model.CaloryHelper.Fats Kcal: @Model.CaloryHelper.CaloriesFromFats</p>
    
    <p>Proteins Percentage: @Model.CaloryHelper.ProteinsPercentage.ToString("F")</p>
    <p>Carbohydrates Percentage: @Model.CaloryHelper.CarbsPercentage.ToString("F")</p>
    <p>Fats Percentage: @Model.CaloryHelper.FatsPercentage.ToString("F")</p>
</div>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Meal number
        </th>
        <th>
            Amount
        </th>
        <th>
            Date
        </th>
        <th></th>
    </tr>

    @foreach (User_Meals item in Model.UserMeals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Meal.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MealNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.UserMealId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.UserMealId })
            </td>
        </tr>
    }

</table>

@using (Html.BeginForm("Index2"))
{
    @Html.EditorFor(model => model.Date)
    <input type="submit" value="Go"/>
}


@{ Html.RenderAction("Get", "Meal");}

